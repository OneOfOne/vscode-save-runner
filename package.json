{
	"name": "save-runner",
	"displayName": "Run Before/After Save",
	"description": "Run commands when a file is about to be saved to disk and/or after it was already saved.",
	"version": "1.1.3",
	"license": "MIT",
	"publisher": "oneofone",
	"author": {
		"name": "OneOfOne"
	},
	"bugs": "https://github.com/OneOfOne/vscode-save-runner/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/OneOfOne/vscode-save-runner"
	},
	"engines": {
		"vscode": "^1.22.0"
	},
	"categories": ["Linters", "Formatters", "Other"],
	"keywords": ["run on save", "run before save", "eslint fix"],
	"activationEvents": ["*"],
	"private": true,
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"title": "Run ",
			"type": "object",
			"properties": {
				"save-runner": {
					"type": "object",
					"properties": {
						"enabled": {
							"type": "boolean",
							"description": "Enable the extension.",
							"default": true
						},
						"showOutput": {
							"type": "boolean",
							"description": "Automatically switch to the output panel when any commands are ran.",
							"default": true
						},
						"autoClearConsole": {
							"type": "boolean",
							"description": "Automatically clear the console on each save before running commands.",
							"default": false
						},
						"useTempFile": {
							"type": "boolean",
							"description": "use a temp file for before actions.",
							"default": true
						},
						"shell": {
							"type": "string",
							"description": "Specify shell path to run commands (gets used in options arg passed to child_process.spawnSync)."
						},
						"commands": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"match": {
										"type": "string",
										"description": "Regex for matching files to run commands on.",
										"default": ".*"
									},
									"notMatch": {
										"type": "string",
										"description": "Regex for matching files *not* to run commands on.",
										"default": ".*"
									},
									"useTempFile": {
										"type": "boolean",
										"description": "use a temp file for before actions, uses the global useTempFile by default."
									},
									"before": {
										"type": ["string", "array"],
										"description": "Command(s) to execute before save, the document will be piped to the command and replaced with the output from the command.",
										"default": "openssl base64"
									},
									"after": {
										"type": "string",
										"description": "Command to execute after save.",
										"default": "echo ${file}"
									},
									"isAsync": {
										"type": "boolean",
										"description": "Run after-save commands asynchronously.",
										"default": false
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.7.0",
		"vscode": "^1.1.0",
		"tslint": "^5.8.0",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42",
		"@types/tmp": "0.0.33"
	},
	"dependencies": {
		"tmp": "0.0.33"
	}
}
